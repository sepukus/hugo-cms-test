
{{/* Generates a valid Algolia search index */}}
{{- $.Scratch.Add "index" slice -}}
{{- $section := $.Site.GetPage "section" .Section }}
{{- range .Site.AllPages -}}
  {{- if and (eq .Type "resources") (ne .URL "/resources/") -}}
    {{- if or (and (.IsDescendant $section) (and (not .Draft) (not .Params.private))) $section.IsHome -}}
      {{- $.Scratch.Add "index" (dict "permalink" .Permalink "title" .Title "type" .Type "category" .Params.category "focus" .Params.focus "role" .Params.role "organisation_size" .Params.organisation_size "industry" .Params.industry )}}
    {{- end -}}
  {{- end -}}
{{- end -}}
{{- $.Scratch.Get "index" | jsonify -}}
